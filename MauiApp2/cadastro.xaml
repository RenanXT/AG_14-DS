<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp2.cadastro"
             
             NavigationPage.HasNavigationBar="False">
    <ContentPage.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="Gray" Offset="0.0" />
            <GradientStop Color="White" Offset="1.0" />
        </LinearGradientBrush>
    </ContentPage.Background>
    
    <VerticalStackLayout VerticalOptions="Center"
                         Margin="10">
        <Label Text="- cadastro -" FontSize="50" 
               FontFamily="Kalam" 
               HorizontalOptions="Center" 
               TextColor="Black"/>
        
        <Frame BorderColor="RoyalBlue">
            <VerticalStackLayout HorizontalOptions="Center" WidthRequest="450">
                <Label Text="Login" HorizontalOptions="Center" FontSize="30" FontFamily="Kalam" />
                <Entry Placeholder="Login" BackgroundColor="White" Margin="10"/>
                <Entry Placeholder="Senha" IsPassword="True" BackgroundColor="White" Margin="10"/>
            </VerticalStackLayout>
        </Frame> 
        
    </VerticalStackLayout>
</ContentPage>